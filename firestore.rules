rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Projects collection - read by all, write by authenticated admin only
    match /projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Reviews collection - read by all, write by authenticated admin only
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Enquiries collection - create by all (contact form), read/update/delete by authenticated admin only
    match /enquiries/{enquiryId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
  }
}
